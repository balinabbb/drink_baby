<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.balintbalina.myapplication.MainActivity"
    style="@style/LayoutStyle">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/titleimage" />
    <!--<Button-->
        <!--style="@style/ButtonStyle"-->
        <!--android:layout_width="250dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Névjegy"-->
        <!--android:id="@+id/aboutButton"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_marginBottom="20dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:onClick="AboutClick"/>-->
    <Button
        style="@style/ButtonStyle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Grafikon"
        android:id="@+id/graphButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="ChartClick"/>
    <Button
        style="@style/ButtonStyle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Beállítások"
        android:id="@+id/manageButton"
        android:layout_above="@id/graphButton"
        android:layout_centerHorizontal="true"
        android:onClick="SettingsClick"/>
    <Button
        style="@style/ButtonStyle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Értesítések"
        android:id="@+id/noteButton"
        android:layout_above="@id/manageButton"
        android:layout_centerHorizontal="true"
        android:onClick="NotificationsClick"/>

    <Button
        style="@style/ButtonStyle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Ital bevitel"
        android:id="@+id/drinkButton"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/noteButton"
        android:onClick="DrinkClick"
        />

</RelativeLayout>
