<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.balintbalina.myapplication.SettingsActivity"
    style="@style/LayoutStyle">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/titleimage" />


    <Button
        style="@style/ButtonStyle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Vissza"
        android:id="@+id/backButton"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:onClick="backClick" />

    <Button
        style="@style/ButtonStyle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="adatok törlése"
        android:id="@+id/deleteStatisticsButton"
        android:layout_marginBottom="5dp"
        android:layout_above="@id/backButton"
        android:layout_centerHorizontal="true"
        android:onClick="deleteDataClick"/>

    <Button
        style="@style/ButtonStyle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="értesítések ki"
        android:id="@+id/cancelAlarmButton"
        android:layout_above="@+id/deleteStatisticsButton"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:onClick="cancelAlarmClick"/>
</RelativeLayout>